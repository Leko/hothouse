{
  "name": "hothouse",
  "version": "0.2.2",
  "description": "Continuous dependency update for Node.js project",
  "bin": {
    "hothouse": "./dist/cli.js"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "../../node_modules/.bin/babel --config-file ../../.babelrc src --out-dir dist",
    "test": "../../node_modules/.bin/jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Leko/hothouse.git"
  },
  "keywords": [
    "cli",
    "ci",
    "dependency",
    "update"
  ],
  "author": "Leko <leko.noor@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Leko/hothouse/issues"
  },
  "homepage": "https://github.com/Leko/hothouse#readme",
  "dependencies": {
    "@hothouse/client-npm": "^0.2.2",
    "@hothouse/client-yarn": "^0.2.2",
    "@hothouse/monorepo-lerna": "^0.2.2",
    "@hothouse/monorepo-yarn-workspaces": "^0.2.2",
    "@hothouse/types": "^0.2.2",
    "@octokit/rest": "^15.9.2",
    "chalk": "^2.4.1",
    "debug": "^3.1.0",
    "git-url-parse": "^9.0.1",
    "glob": "^7.1.2",
    "isomorphic-git": "^0.19.11",
    "minimatch": "^3.0.4",
    "mustache": "^2.3.0",
    "normalize-package-data": "^2.4.0",
    "remark": "^9.0.0",
    "remark-github": "^7.0.3",
    "remark-html": "^7.0.0",
    "remark-parse": "^5.0.0",
    "semver": "^5.5.0",
    "unified": "^7.0.0",
    "yargs": "^11.0.0"
  },
  "babel": {
    "extends": "../../.babelrc"
  },
  "collectCoverageFrom": [
    "src/*.{js,jsx}"
  ]
}
